@model MovieRater.ViewModels.AddRatingViewModel

<div id="AddWatchList">
    <div class="container">
        <div id="AddWatchList-row" class="row justify-content-center align-items-center">
            <div id="AddWatchList-column" class="col-md-6">
                <div id="AddWatchList-box" class="col-md-12">
                    <form id="AddWatchList-form" class="form" asp-action="AddWatchList" enctype="multipart/form-data">
                        <h1>Beoordeel film</h1>
                        <hr />
                        <div class="form-group">
                            <label asp-for="MovieID" class="control-label"></label>
                            <input asp-for="MovieID" class="form-control" placeholder="Film titel.." />
                            <span asp-validation-for="MovieID" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Verstuur" class="btn btn-primary active" style="width:100%" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


