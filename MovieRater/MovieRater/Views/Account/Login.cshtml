
@{
    ViewData["Title"] = "Login";
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.8/css/all.css">
}
<div class="card bg-light">
    <article class="card-body mx-auto" style="max-width: 400px;">
        <h4 class="card-title mt-3 text-center">Login</h4>
        <form>
            <div class="form-group input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"> <i class="fa fa-envelope"></i> </span>
                </div>
                <input name="" class="form-control" placeholder="Email adres" type="email">
            </div>

            <div class="form-group input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
                </div>
                <input class="form-control" placeholder="Wachtwoord" type="password">
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-block"> Login  </button>
            </div>

            <p class="text-center">Heeft u nog geen account? <a asp-controller="Account" asp-action="Register">Registreer</a> </p>
        </form>
    </article>
</div>

